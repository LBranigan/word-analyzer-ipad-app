{
  "expo": {
    "name": "Word Analyzer",
    "slug": "word-analyzer-app",
    "scheme": "wordanalyzer",
    "version": "1.0.0",
    "orientation": "landscape",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": false,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#F7FAFC"
    },
    "ios": {
      "supportsTablet": true,
      "requireFullScreen": true,
      "bundleIdentifier": "com.wordanalyzer.ipadapp",
      "infoPlist": {
        "NSMicrophoneUsageDescription": "Word Analyzer needs microphone access to record student reading assessments.",
        "NSCameraUsageDescription": "Word Analyzer needs camera access to capture images of reading passages.",
        "NSPhotoLibraryUsageDescription": "Word Analyzer needs photo library access to import images of reading passages.",
        "UIRequiresFullScreen": true
      }
    },
    "android": {
      "package": "com.wordanalyzer.ipadapp",
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#F7FAFC"
      },
      "permissions": [
        "RECORD_AUDIO",
        "CAMERA",
        "android.permission.CAMERA",
        "android.permission.RECORD_AUDIO",
        "android.permission.MODIFY_AUDIO_SETTINGS"
      ],
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      [
        "expo-camera",
        {
          "cameraPermission": "Word Analyzer needs camera access to capture images of reading passages."
        }
      ],
      [
        "expo-av",
        {
          "microphonePermission": "Word Analyzer needs microphone access to record student reading assessments."
        }
      ]
    ],
    "extra": {
      "eas": {
        "projectId": "d8ba6143-e6d3-49ad-ae17-e6f14862a230"
      }
    }
  }
}
